<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#90dbf4" />  <!-- Change color as needed -->

    <!-- Rounded corners -->
    <corners android:radius="150dp" />

    <!-- Optional border -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- Optional padding inside the shape -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
